<div class="container">
  <h2 class="text-center"><%= @group.name %></h2>
  <h4 class="text-center">参加申請一覧</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @permits.present? %>
      <div class="table-responsive">
        <table class="table table-hover text-nowrap bg-light">
          <thead class="thead-dark">
            <tr>
              <th>名前</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @permits.each do |permit| %>
              <tr>
                <td><%= link_to permit.user.name, user_path(permit.user.id), class: "text-dark" %></td>
                <td>
                  <% if permit.user.id.present? %>
                    <%= permit.user.name %>
                  <% end %>
                </td>
                <td class="text-right">
                  <%= link_to '加入許可', group_group_users_path(@group, permit_id: permit.id), method: :post, class: "btn btn-sm btn-outline-success" %>
                  <%= link_to '加入拒否', group_permits_path(@group, permit_id: permit.id), method: :delete, class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <P class="text-center">承認待ちユーザーはいません。</P>
    <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", group_path(@group), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>
