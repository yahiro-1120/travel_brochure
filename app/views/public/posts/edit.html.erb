<h2>投稿編集</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>

  <h4>都道府県</h4>
  <%= f.text_field :pref %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>スケジュール</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>
<% end %>