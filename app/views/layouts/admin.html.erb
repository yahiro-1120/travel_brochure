<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Travel Brochure</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-light" style="background-color: #DDDDDD;">
        <div class="container">
          <a class="navbar-brand" href="dashboards">Travel Brochure管理者画面</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class="admin-nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
              <li class="admin-nav-item">
                <%= link_to 'ユーザー一覧', admin_dashboards_path, class: 'nav-link text-dark' %>
              </li>
              <li class="admin-nav-item">
                <%= link_to 'コメント一覧', admin_post_comment_dashboards_path, class: 'nav-link text-dark' %>
              </li>
              <li class="admin-nav-item">
                <%= link_to 'グループ一覧', admin_group_dashboards_path, class: 'nav-link text-dark' %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>